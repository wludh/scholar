#header.col-xs-12
  .col-xs-12

    .col-xs-7
      #{link_to(image_tag($APPLICATION_LOGO, :alt => t('personalize.application_name')), works_path)}

    .col-xs-5.last
      = form_tag search_path, :method => :get, :class => "header-search-form" do
        #search-box.input-group
          #{text_field_tag(:q, nil, :size => 21, class: "form-control", placeholder: "I want to find...")}
          %span.input-group-btn
            #{ submit_tag t('app.search'), class: "btn btn-primary" }
        %span.advanced-search-link #{link_to t('app.advanced'), advanced_search_path}

    = render 'shared/tagline_and_locales'

    .col-xs-9
      = render 'shared/header_nav'

    .col-xs-3.last
      = render 'shared/header_global_nav'
